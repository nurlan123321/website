{{> header }} <!--Template partials/header-->
    <div class="create">
        <div class="row">
            <form action="create" method="post" enctype="multipart/form-data" class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
                <div class="form-group">
                    <label for="exampleInputEmail1">Название</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Название" name="title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Категория</label>
                    <select class="form-control" name="category">
                        {{#each categories}}
                            <option>{{catname}}</option>
                        {{/each}}
                    </select>   
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Текст</label>
                    <textarea type="text" rows="10" cols="45" class="form-control" id="exampleInputPassword1" placeholder="Текст" name="body"></textarea>
                </div>
                 <div class="form-group">
                    <label for="exampleInputPassword1">Картинка</label>
                    <input type="file" name="mainimage" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Автор</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="author" placeholder="Автор">
                </div>
                    <button type="submit" class="btn btn-default">Добавить</button>
            </form>
        </div>
    </div>
   
